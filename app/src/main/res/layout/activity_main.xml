<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:colortextview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="loic.teillard.sample.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <loic.teillard.colortextview.ColorTextView
                android:id="@+id/xml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                colortextview:clt_color1="@color/md_black_1000"
                colortextview:clt_txt1="From layout :"
                android:textStyle="bold"
                android:textSize="18sp"
                />


            <loic.teillard.colortextview.ColorTextView
                android:id="@+id/textview1"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                colortextview:clt_spaces="true"
                colortextview:clt_color1="@color/md_deep_purple_A200"
                colortextview:clt_color2="@color/md_red_900"
                colortextview:clt_txt1="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna"
                colortextview:clt_txt2="aliqua."
                />

            <loic.teillard.colortextview.ColorTextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                colortextview:clt_color1="@color/md_deep_purple_A200"
                colortextview:clt_color2="@color/md_red_900"
                colortextview:clt_color3="@color/md_deep_purple_A200"
                colortextview:clt_spaces="true"
                colortextview:clt_txt1="Lorem"
                colortextview:clt_txt2="ipsum dolor sit amet, consectetur"
                colortextview:clt_txt3="adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                />

            <loic.teillard.colortextview.ColorTextView
                android:id="@+id/textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                colortextview:clt_color1="@color/md_deep_purple_A200"
                colortextview:clt_color2="@color/md_green_400"
                colortextview:clt_color3="@color/md_deep_purple_A200"
                colortextview:clt_color4="@color/md_brown_700"
                colortextview:clt_color5="@color/md_deep_purple_A200"
                colortextview:clt_spaces="false"
                colortextview:clt_txt1="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do ei"
                colortextview:clt_txt2="usm"
                colortextview:clt_txt3="od tempor incididunt ut"
                colortextview:clt_txt4=" labore et dolore"
                colortextview:clt_txt5=" magna aliqua."
                />

            <loic.teillard.colortextview.ColorTextView
                android:id="@+id/java"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                colortextview:clt_color1="@color/md_black_1000"
                colortextview:clt_txt1="From Java :"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <!--http://fr.lipsum.com/-->


        </LinearLayout>

    </ScrollView>
</RelativeLayout>
